<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ui.penyakit.AddPenyakitActivity"
    android:padding="20dp">

    <EditText
        android:id="@+id/edit_nama_penyakit"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:hint="@string/nama_penyakit"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        />
    <EditText
        android:id="@+id/edit_penyebab"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:hint="@string/penyebab"
        android:minLines="3"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/edit_nama_penyakit"
        android:layout_marginTop="10dp"
        android:gravity="top"
        />
    <EditText
        android:id="@+id/edit_solusi"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:hint="@string/solusi"
        android:minLines="3"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/edit_penyebab"
        android:layout_marginTop="10dp"
        android:gravity="top"
        />
    <Button
        android:id="@+id/button_save"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:text="SAVE"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/edit_solusi"
        android:layout_marginTop="20dp"
        android:visibility="gone"
        />


</androidx.constraintlayout.widget.ConstraintLayout>